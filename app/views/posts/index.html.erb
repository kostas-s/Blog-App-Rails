<h1>Posts</h1>

<table class="table table-hover table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Content</th>
            <th>Email</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%=link_to post.title, post%></td>
            <td><%= post.author %></td>
            <td><%= post.content %></td>
            <td><%= post.email %></td>
            <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-secondary"%></td>
            <td><%= link_to 'Destroy', post, class:"btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class:"btn btn-secondary" %>