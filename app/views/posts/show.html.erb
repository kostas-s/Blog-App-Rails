<div class="jumbotron">
    <h1 class="display-4"><%= @post.title %></h1>
    <p class="lead"><%= @post.content %></p>
    <hr class="my-4">
    <p><%= @post.author %> | <%= @post.email %></p>
    <br /><br />
    <%= link_to 'Edit', edit_post_path(@post), class:"btn btn-secondary" %>
    <%= link_to 'Back', posts_path, class:"btn btn-secondary" %>
</div>